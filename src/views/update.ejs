      <section id="author">
        
        <h1><marquee behavior="scroll" direction="left">Update details </marquee></h1>
<div class="container">
          <h2><%=title%> </h2>
       
<form  method="POST" action="/update/<%=book._id%>">
  <div class="form-group row">
    <label for="title" class="col-sm-2 col-form-label">Title</label>
    <input type="text"   name="title" value="<%=book.title%>" >
    <input type="text"   name="id" hidden value="<%=book._id%>" >
  </div>
  <div class="form-group row">
    <label for="author" class="col-sm-2 col-form-label">Author</label>
    <input type="text"  name="author"value="<%=book.author%>">
    
  </div>
  <div class="form-group row">
    <label for="gener" class="col-sm-2 col-form-label">Genre</label>
    <input type="text" name="genre" value="<%=book.genre%>">
  </div>
  <div class="form-group row">
    <label for="image" class="col-sm-2 col-form-label">Image</label>
    <input type="file"  name="image" value="<%=book.image%>">
  </div>

  <div class="form-group row">
    <label for="Choosefile" class="col-sm-2 col-form-label">link</label>
    <input type="url" name="link"value="<%=book.link%>">
  </div>
  <div class="form-group row">
    <label for="submit" class="col-sm-2 col-form-label"></label>
  <button type="submit" class="btn btn-primary">Update Book</button>
</div>

    </form>

  

</section>
 
